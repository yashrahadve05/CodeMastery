generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum Difficutly {
  EASY
  MEDIUM
  HARD
}

model User {
  id String @id @default(uuid())
  name String?
  email String @unique
  image String?
  role UserRole @default(USER)
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  problems Problem[]
}

model Problem {
  id String @id @default(uuid())
  title String
  description String
  difficulty Difficutly
  tags String[] // ["tag1", "tag2", "tag3"]
  userId String
  examples Json
  constraints String
  hints String?
  editorial String?

  tastcases Json //
  codeSnippets Json
  referenceSolution Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationship
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
